#!/usr/bin/env bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

path="$1"
shift 1

cd "$path"

run_build() {
  "$path/build"
}

run_build

job_id=""

repl() {
  if ! [ -z "$job_id" ]; then
    kill -SIGINT "$job_id"
    wait "$job_id"
    sleep 1
    job_id=""
  fi

  if ! run_build; then
    echo "Building $path failed."
    return 1
  fi

  export SOUR_CONFIG="$(cat $SCRIPT_DIR/config/config.json)"
  $@ &
  result="$?"
  job_id="$!"
  echo "Ran service with pid=$job_id"
  if [ "$result" -gt 0 ]; then
    echo "Running $path failed."
    job_id=""
    return 1
  fi
  return 0
}

repl $@

while true; do
  inotifywait -qr "$path" "$SCRIPT_DIR/config" -e MODIFY
  "$SCRIPT_DIR/config/build"
  repl $@
done
