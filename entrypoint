#!/usr/bin/env bash

# Update env vars in the source code
ASSET_SOURCE=${ASSET_SOURCE:-/assets/.index.json}
QSERV_PATH=/bin/qserv
(cd /app/ && sed -i -e "s{__ASSET_SOURCE__{$ASSET_SOURCE{g" index.js)

run_proxy() {
  wsproxy 28785
}

run_cluster() {
  cluster
}

run_server() {
  cd /qserv
  qserv
}

run_site() {
  nginx -g 'daemon off;'
}

run_proxy &
run_server &
run_cluster &
run_site &

tail -F /bin/entrypoint
