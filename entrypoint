#!/usr/bin/env bash

set -e

CONFIG_DIR=${CONFIG_DIR:-/sour/config}
SOUR_CONFIG="/sour/config.json"

# Validate the user's configuration and export the combined config
cue export \
  /sour/schema.cue \
  /sour/default-config.yaml \
  $CONFIG_DIR/config/*.{json,yaml,cue} > "$SOUR_CONFIG"

# Update env vars in the source code
ASSET_SOURCE=${ASSET_SOURCE:-/assets/.index.json}
(cd /app/ && sed -i -e "s{__ASSET_SOURCE__{$ASSET_SOURCE{g" index.js)

run_proxy() {
  wsproxy 28785
}

run_cluster() {
  cd /qserv
  export QSERV_LOBBY_CONFIG=/qserv/config/server-init.cfg
  export ASSET_SOURCE="http://localhost:1234/assets/.index.json"
  cluster
}

run_site() {
  nginx -g 'daemon off;'
}

run_proxy &
run_cluster &
run_site &

tail -F /bin/entrypoint
